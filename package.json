{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write \"**/*.{html,js,jsx,json,mdx,yml}\""
  },
  "dependencies": {
    "@stitches/react": "^0.2.5",
    "next": "11.1.0",
    "next-themes": "0.0.15",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@types/react": "^17.0.19",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-testing-library": "^4.11.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run check-lint",
      "npm run format",
      "npm run test --findRelatedTests --bail"
    ]
  }
}
